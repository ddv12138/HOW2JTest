<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tk.ddvudo.Mybatis">
    <resultMap type="Order" id="orderBean">
        <id column="oid" property="id"/>
        <result column="code" property="code"/>
        <collection property="orderItems" ofType="OrderItem">
            <id column="oiid" property="id"/>
            <result column="number" property="number"/>
            <association property="product" javaType="Product">
                <id column="pid" property="id"/>
                <result column="pname" property="name"/>
                <result column="price" property="price"/>
            </association>
        </collection>
    </resultMap>

    <select id="listOrder" resultMap="orderBean">
        select o.id 'oid', o.code, oi.id 'oiid', oi.number, p.id 'pid', p.name 'pname', p.price
        from `order` o
        left join order_item oi on o.id = oi.oid
        left join Product p on p.id = oi.pid
        <where>
            <if test="oid!=null">
                and oid = #{oid}
            </if>
            <if test="pid!=null">
                and pid = #{pid}
            </if>
        </where>
    </select>

    <select id="getOrder" resultMap="orderBean" parameterType="string">
        select o.*, p.*, oi.*, o.id 'oid', p.id 'pid', oi.id 'oiid', p.name 'pname'
        from `order` o
                 left join order_item oi on o.id = oi.oid
                 left join Product p on p.id = oi.pid
        where o.id = #{0}
    </select>
    <select id="deleteOrder" parameterType="tk.ddvudo.Mybatis.JavaBeans.Order">
        delete
        from `order`
        where id = #{id};
        delete
        from order_item
        where oid = #{id};
    </select>
</mapper>